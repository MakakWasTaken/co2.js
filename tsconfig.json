{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["src", "test"],
    "baseUrl": ".",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,

    "skipLibCheck": true,
    "noImplicitAny": true,

    "incremental": true,

    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "removeComments": true,

    "composite": true
  },
  "exclude": ["node_modules", "dist"]
}
